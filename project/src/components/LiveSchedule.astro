---
const shows = [
    {
        date: '2024.05.15',
        venue: 'Shibuya O-EAST',
        ticketLink: '#',
    },
    {
        date: '2024.06.20',
        venue: 'Osaka BIG CAT',
        ticketLink: '#',
    },
];
---
<section class="live" id="live">
    <h2>Live Schedule</h2>
    <div class="schedule">
        {shows.map(show => (
            <div class="show">
                <div class="date">{show.date}</div>
                <div class="venue">{show.venue}</div>
                <a href={show.ticketLink} class="ticket-link">チケット情報</a>
            </div>
        ))}
    </div>
</section>

<style>
    .live {
        padding: 5rem 2rem;
    }

    h2 {
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 3rem;
        color: var(--primary-color);
    }

    .schedule {
        max-width: 800px;
        margin: 0 auto;
    }

    .show {
        display: grid;
        grid-template-columns: 1fr 2fr 1fr;
        gap: 1rem;
        padding: 1rem;
        border-bottom: 1px solid #333;
    }

    .ticket-link {
        color: var(--primary-color);
        text-decoration: none;
        &:hover {
            text-decoration: underline;
        }
    }
</style>