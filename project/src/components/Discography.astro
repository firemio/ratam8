---
const albums = [
    {
        title: 'Touching Rain',
        releaseDate: '2025.01.08',
        image: '/images/touching-rain_256x256.webp',
    },
];
---
<section class="discography" id="discography">
    <h2>Discography</h2>
    <div class="albums">
        {albums.map(album => (
            <div class="album">
                <div class="album-image-container">
                    <img src={album.image} alt={album.title} />
                </div>
                <h3>{album.title}</h3>
                <p>{album.releaseDate}</p>
            </div>
        ))}
    </div>
</section>

<style>
    .discography {
        padding: 5rem 2rem;
    }

    h2 {
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 3rem;
        color: var(--primary-color);
    }

    .albums {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .album {
        text-align: center;
        max-width: 256px;
        margin: 0 auto;
    }

    .album-image-container {
        width: 100%;
        max-width: 256px;
        margin: 0 auto 1rem;
    }

    .album img {
        width: 100%;
        height: auto;
        object-fit: cover;
        border-radius: 4px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .album h3 {
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    @media (max-width: 768px) {
        .album {
            max-width: 200px;
        }
    }
</style>